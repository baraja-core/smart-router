{
	"name": "baraja-core/smart-router",
	"homepage": "https://github.com/baraja-core/smart-router",
	"authors": [
		{
			"name": "Jan Barášek",
			"homepage": "https://baraja.cz"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0",
		"nette/application": "^3.0",
		"nette/http": "^3.0",
		"nette/caching": "^3.0",
		"baraja-core/localization": "^1.0",
		"baraja-core/url": "^1.0"
	},
	"require-dev": {
		"tracy/tracy": "^2.8",
		"phpstan/phpstan": "^0.12.74",
		"phpstan/phpstan-nette": "^0.12.14",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse src -c phpstan.neon --level 8 --no-progress"
		]
	},
	"minimum-stability": "stable"
}
